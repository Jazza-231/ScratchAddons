{
  "name": "Editor workspace dots theme",
  "description": "Allows the customisation of the style of the editor workspace dots.",
  "tags": ["editor", "codeEditor", "theme"],
  "versionAdded": "1.39.0",
  "userscripts": [{ "url": "userscript.js", "matches": ["projects"] }],
  "settings": [
    {
      "name": "Dots theme",
      "id": "theme",
      "type": "select",
      "default": "dots",
      "potentialValues": [
        { "id": "dots", "name": "Default dots" },
        { "id": "crosshairs", "name": "Crosshairs" },
        { "id": "lines", "name": "Solid lines" },
        { "id": "vertical", "name": "Vertical Lines" },
        { "id": "horizontal", "name": "Horizontal Lines" },
        { "id": "none", "name": "None" }
      ]
    },
    {
      "name": "Use a custom spacing value",
      "id": "useSpacing",
      "type": "boolean",
      "default": true
    },
    {
      "name": "Spacing value",
      "id": "spacing",
      "type": "positive_integer",
      "default": 40,
      "min": 1,
      "if": { "settings": { "useSpacing": true } }
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "credits": [{ "name": "Jazza", "link": "https://scratch.mit.edu/users/greeny--231" }]
}
